<Window x:Class="Lab5.SuperheroDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Superhero Details" Height="400" Width="400">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Name:" FontSize="14"/>
            <TextBlock x:Name="NameTextBlock" FontSize="16" FontWeight="Bold" Margin="0,5"/>

            <TextBlock Text="Alias:" FontSize="14"/>
            <TextBlock x:Name="AliasTextBlock" FontSize="16" Margin="0,5"/>

            <TextBlock Text="Superpowers:" FontSize="14"/>
            <TextBlock x:Name="SuperpowersTextBlock" FontSize="16" Margin="0,5"/>

            <TextBlock Text="Power Level:" FontSize="14"/>
            <TextBlock x:Name="PowerLevelTextBlock" FontSize="16" Margin="0,5"/>

            <TextBlock Text="Photo:" FontSize="14"/>
            <Image x:Name="HeroImage" Width="100" Height="100" Margin="0,5"/>

            <Button Content="Close" Width="100" Height="30" VerticalAlignment="Bottom" Margin="0,10,0,0" Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>